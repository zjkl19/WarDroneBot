{
  // 你的设备分辨率（示例：小米14）
  screen: { width: 2670, height: 1200 },

  // ===== 统一 ROI 库（相对坐标 0~1：中心 x/y + 宽高）=====
  // 用 interactive_crop.py 框出来后把数值贴到这里。
  rois: {
    splash_logo:   [0.50, 0.80, 0.60, 0.22],  // 覆盖 "WAR DRONE" 大字区域（示例占位）
    pre_start_btn: [0.54, 0.86, 0.82, 0.11],  // 战前页“开始”（示例占位）
    list_start:    [0.77, 0.86, 0.38, 0.11],  // 关卡列表页“开始”（示例占位）
    collect_btn:   [0.50, 0.86, 0.88, 0.11],  // 结算页“收集/领取”（示例占位）

    // 战斗页
    goal_text:     [0.82, 0.79, 0.08, 0.06],  // 右下“目标：xx%”一带（建议你用交互脚本再圈）
    hp_bar:        [0.49, 0.05, 0.19, 0.06],  // 顶部心形+绿色血条（建议你再圈）

    // 升级页
    upgrade_menu:  [0.55, 0.52, 0.61, 0.09],  // 左栏“武器”高亮按钮区域（你已给大概点）
  },

  // ===== 模板（可选，作辅助）=====
  // 朴素模板匹配：method = "ncc"（OpenCV 归一化互相关），thresh 建议 0.60~0.80。
  templates: [
    { name: "combat_goal", path: "templates/combat_goal.png", roi: "goal_text", method: "ncc", thresh: 0.65 },
    { name: "combat_hp",   path: "templates/combat_hp.png",   roi: "hp_bar",   method: "ncc", thresh: 0.65 },
    { name: "menu_weapons_glow", path: "templates/menu_weapons_glow.png", roi: "upgrade_menu", method: "ncc", thresh: 0.70 }
  ],

  // ===== 状态定义（OCR 为主，模板为辅）=====
  // 规则会按顺序评估（命中即可判定该状态）。
  // === 状态规则（OCR为主，contains/regex 二选一都可；lang: ch_sim / en） ===
  states: [
    {
      name: "list",
      rois: ["list_start"],
      ocr: [
        { roi: "list_start", lang: "ch_sim", all_contains: ["目标","开始游戏"], min_conf: 0.60 }
      ]
    },
    {
      name: "prebattle",
      rois: ["pre_start_btn"],
        ocr: [
        { roi: "pre_start_btn", lang: "ch_sim", all_contains: ["敌方","情报","开始游戏"], min_conf: 0.80 },
      ]
    },
    {
      // 战斗：右下可能只识别到百分比；顶部 HP 也有百分比
      name: "combat",
      rois: ["goal_text", "hp_bar"],
      ocr: [
        // 任一 ROI 里有 百分比 即可（避免必须识别出“目标”二字）
        { roi: "goal_text", lang: "ch_sim", regex: "\\b\\d{1,3}%\\b", min_conf: 0.30 },
        { roi: "hp_bar",    lang: "ch_sim", regex: "\\b\\d{1,3}%\\b", min_conf: 0.40 }
      ],
      // 模板可加分，但不强制
      aux_templates: [
        { template: "combat_goal", min_score: 0.65 },
        { template: "combat_hp",   min_score: 0.65 }
      ]
    },
    {
      name: "settlement",
      rois: ["collect_btn"],
      ocr: [
        { roi: "collect_btn", lang: "ch_sim", contains: ["收集", "领取"], min_conf: 0.60 }
      ]
    },
    {
      name: "splash",
      rois: ["splash_logo"],
      ocr: [
        { roi: "splash_logo", lang: "en", contains: ["Mobile Gaming Studios Ltd."], min_conf: 0.40 }
      ]
    },
    {
      name: "upgrade",
      rois: ["upgrade_menu"],
      ocr: [
        { roi: "upgrade_menu", lang: "ch_sim", contains: ["机关炮"], min_conf: 0.50 }
      ],
      aux_templates: [
        { template: "menu_weapons_glow", min_score: 0.70 }
      ]
    }
  ]
}
